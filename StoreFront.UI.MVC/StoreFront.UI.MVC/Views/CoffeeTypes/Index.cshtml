@model IEnumerable<StoreFront.DATA.EF.CoffeeType>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@if (User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @if (User.IsInRole("Admin"))
                {
                <span>@Html.ActionLink("Edit", "Edit", new { id = item.TypeID }) |</span>
                }
                
                @Html.ActionLink("Details", "Details", new { id = item.TypeID }) |

                @if (User.IsInRole("Admin"))
                {
                <span>@Html.ActionLink("Delete", "Delete", new { id = item.TypeID })</span>
                }
                
            </td>
        </tr>
    }

</table>
