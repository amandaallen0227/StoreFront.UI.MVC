<body>
    <div id="preloader"></div>
    <header class="navbar navbar-inverse navbar-fixed-top opaqued" role="banner">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <i class="fa fa-bars"></i>
                </button>
                <a class="navbar-brand" href="@Url.Action("Index","Home")"><h1><span class="pe-7s-gleam bounce-in"></span>ANCHOR</h1></a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="@Url.Action("Index","Home")">Home</a></li>
                    <li><a href="@Url.Action("Index","Coffee")">Shop</a></li>
                    <li><a href="@Url.Action("Index","CoffeeSuppliers")">Our Partners</a></li>
                    @*<li class="dropdown active">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Join<i class="fas fa-angle-down"></i></a>
                            <ul class="dropdown-menu">
                                <li><a href="@Url.Action("Register","Account")">Register</a></li>
                                <li><a href="@Url.Action("Login","Account")">Login</a></li>
                            </ul>
                        </li>*@
                    <li><a href="@Url.Action("Contact","Home")">Contact</a></li>
                    <li><a href="@Url.Action("About","Home")">About</a></li>

                    @Html.Partial("_LoginPartial")
                    <li><span class="search-trigger"><i class="fas fa-search"></i></span></li>
                </ul>
            </div>
        </div>
    </header><!--/header-->


    <div id="content-wrapper">
        @RenderBody()
    </div>


    <div id="footer-wrapper">
        <section id="bottom" class="">
            <div class="container">
                <div class="row">
                    <div class="col-md-3 col-sm-6 about-us-widget">
                        <h4>Ethically Sourced</h4>
                        <p> Our approach to sourcing is a part of the core philosophy of our company. Quality driven farmers cultivate their coffee crop to be its best. It is their work that builds the foundation for what makes great coffee. </p>
                    </div><!--/.col-md-3-->
                    <div class="col-md-3 col-sm-6">
                        <h4>Company</h4>
                        <div>

                            @if (User.IsInRole("Admin"))
                            {
                                <a href="" class="dropdown-toggle" data-toggle="dropdown"> <b>Admin Tools</b> </a>
                                <ul>
                                    <li><a href="@Url.Action("Index","Employees")">Employees</a></li>
                                    <li><a href="@Url.Action("Index","Customers")">Customers</a></li>
                                    <li><a href="@Url.Action("Index","CoffeeSuppliers")">Suppliers</a></li>
                                    <li><a href="@Url.Action("Index","Coffee")">Coffees</a></li>
                                </ul>
                            }

                        </div>
                    </div><!--/.col-md-3-->
                    <div class="col-md-3 col-sm-6">
                        <h4>Come and See</h4>
                        <div>
                            <div class="media">
                                <div class="pull-left">
                                    <img class="widget-img" src="~/Content/images/coffeeBeans/taylor-hernandez-NK-N6coeI5Y-unsplash.jpg" alt="">
                                </div>
                                <div class="media-body">
                                    <span class="media-heading"><a href="@Url.Action("Index","Coffee")">Shop Here</a></span>
                                    <small class="muted">Roasted to order, your journey starts here.</small>
                                </div>
                            </div>
                            <div class="media">
                                <div class="pull-left">
                                    <img class="widget-img" src="~/Content/images/coffeeBeans/clint-mckoy-h28p96ICizo-unsplash.jpg" alt="">
                                </div>
                                <div class="media-body">
                                    <span class="media-heading"><a href="@Url.Action("About","Home")">Company History</a></span>
                                    <small class="muted">From humble beginnings </small>
                                </div>
                            </div>
                        </div>
                    </div><!--/.col-md-3-->
                    <div class="col-md-3 col-sm-6">
                        <h4>Drop In</h4>
                        <address>
                            <strong>Anchor Coffee</strong><br>
                            4040 Southwest Boulevard Kansas City,<br>
                            Missouri, 86370<br>
                            <abbr title="Phone"><i class="fa fa-phone"></i></abbr>  +1-816-849-1286
                        </address>
                    </div> <!--/.col-md-3-->
                </div>
            </div>
        </section><!--/#bottom-->


        <footer id="footer" class="">
            <div class="container">
                <div class="row">
                    <div class="col-sm-8">
                        &copy; 2021 ANCHOR @*<a href="https://templatemag.com/bootstrap-templates/">Bootstrap templates</a>*@
                    </div>
                    <div class="col-sm-4">
                        <ul class="pull-right">
                            <li><a id="gototop" class="gototop" href="@ViewBag.Title"><i class="fas fa-arrow-up"></i></a>  Back To Top</li><!--#gototop-->
                        </ul>
                    </div>
                </div>
            </div>
        </footer><!--/#footer-->
    </div>
    <script src="~/Scripts/js/bootstrap.min.js"></script>
    <script src="~/Scripts/js/jquery.prettyPhoto.js"></script>
    <script src="~/Scripts/js/plugins.js"></script>
    <script src="~/Scripts/js/init.js"></script>

    <!--JQuery DataTables-->
    @*<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>*@
    <!-- Place scripts below jQuery (jQuery may already be referenced in your project) -->
    <script src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.1/js/dataTables.responsive.min.js"></script>


    @RenderSection("scripts", required: false)
</body>
</html>
